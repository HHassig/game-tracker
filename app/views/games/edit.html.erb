<div class="game-container">
  <h2>Edit Game</h2>
  <% unless @game.nil? %>
    <div class="form-group" style="width: 80%; margin: auto;" >
      <%= simple_form_for @game, data:{ turbo: false } do |f| %>
        <%= f.input :name, required: true  %>
        <%= f.input :url, required: true %>
        <%= f.input :max_score, required: true %>
        <%= f.submit %>
      <% end %>
    </div>
  <% else %>
    <p>Only an admin can edit a  game</p>
  <% end %>
</div>
