<div class="game-container">
  <h2>Add a New Game:</h2>
    <div class="form-group" style="width: 80%" >
      <%= simple_form_for @game, data:{ turbo: false } do |f| %>
        <%= f.input :name, required: true  %>
        <%= f.input :url, required: true %>
        <%= f.submit %>
      <% end %>
    </div>
</div>
