<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-navbar">
    <div class="navbar-brand">
        <%= link_to root_path do %>
          <%= image_tag "https://i.imgur.com/ozA6JYB.png" %>
        <% end %>
        <% if cookies[:theme] == "light" %>
          <%= link_to "<i class='fa-solid fa-moon'></i>".html_safe, root_path(theme: "dark") %>
        <% else %>
          <%= link_to "<i class='fa-solid fa-sun'></i>".html_safe, root_path(theme: "light") %>
        <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Games", games_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <% unless current_user.photo.key.nil? %>
              <% photo_url = cl_image_path(current_user.photo.key) %>
            <% else %>
              <% photo_url = "https://i.imgur.com/djGIukc.png" %>
            <% end %>
            <%= "<img class='avatar dropdown-toggle' id='navbarDropdown' data-bs-toggle='dropdown' aria-haspopup='true' aria-expanded='false' src='#{photo_url}' />".html_safe %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Friends", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
